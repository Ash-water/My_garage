<div class="contents row">
  <div class="container">
    <h3>投稿する</h3>
    <%= form_with(model: @blog, local: true) do |form| %>
      <%= form.text_field :title, placeholder: "title" %>
      <%= form.text_field :image, placeholder: "Image Url" %>
      <%= form.text_area :content, placeholder: "content" %>
      <%= form.submit "SEND" %>
    <% end %>
  </div>
</div>