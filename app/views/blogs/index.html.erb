<div class="main-contents">
  <div class="blog-view">

        <div class="topic"><span class="start">M</span>ind Garage</div>
        <%= link_to "new", new_blog_path, class:"new-blog" %>
          <div class="contents row slide">
              <% @blogs.each do |blog| %>
              <div class="content_post" style="background-image: url(<%= blog.image %>);">
              <div class="more">
              <span><%= image_tag 'arrow_top.png' %></span>
              <ul class="more_list">
              <li>
              <%= link_to 'detail', blog_path(blog.id), method: :get %>
              </li>
              </ul>
              </div>
              <p><%= blog.title %></p>
              <span class="name">
              <%= blog.created_at %>
              </span>
              </div>
              <div class="blog-editing">
              <%= link_to 'edit', edit_blog_path(blog.id), method: :get %>
              <%= link_to 'delete', blog_path(blog.id), method: :delete %>
              </div>
              <% end %>
          </div>
      
  </div>
</div>